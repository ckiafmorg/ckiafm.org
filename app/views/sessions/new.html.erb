<div class="mt-5 col-12 col-md-10 col-lg-8 col-xl-6 mx-auto">
  <h1 class="display-3"><%= t('auth.form_title') %></h1>

  <%= form_with url: [:session], local: true do |form| %>
    <div class="mb-3">
      <%= form.label :email, t("auth.email_label"), class: "visually-hidden sr-only form-label" %>
      <%= form.text_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: t("auth.email_label") %>
    </div>

    <div class="mb-3">
      <%= form.label :password, t("auth.password_label"), class: "visually-hidden sr-only form-label" %>
      <%= form.password_field :password, class: "form-control form-control-lg", placeholder: t("auth.password_label") %>
    </div>

    <div class="text-right my-5">
      <%= button_tag t("auth.signin_button_text"), class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
