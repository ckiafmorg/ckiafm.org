<%= form_with model: @membre, local: true do |form| %>

  <h1>Devenez membre de CKIA, votre radio</h1>

  <div class="row mb-3">
    <div class="col-lg">
      <%= form.label :prenom, "Prenom", class: "visualy-hidden sr-only form-label" %>
      <%= form.text_field :prenom, class: "form-control", placeholder: "Prenom" %>
    </div>
    <div class="col-lg">
      <%= form.label :nom, "nom", class: "visualy-hidden sr-only  form-label" %>
      <%= form.text_field :nom, class: "form-control", placeholder: "Nom" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg">
      <%= form.label :email, 'email', class: " visualy-hidden sr-only form-label" %>
      <%= form.email_field :email , class: "form-control", placeholder: "example@courriel.com"%>
    </div>

  </div>

  <div class="text-right my-5">
    <%= form.submit "S'inscrire", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>