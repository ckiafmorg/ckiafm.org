<% flash.each do |type, msg| %>
  <% if type == 'notice' %>
    <div class="alert alert-success alert-dismissible fade show mt-3 d-flex align-items-center" role="alert">
      <%= bootstrap_icon('check-circle-fill', class: 'bi flex-shrink-0 me-2') %>
      <div> <%= notice %></div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t('admin.shared.close') %>"></button>
    </div>
  <% else %>
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex align-items-center" role="alert">
      <%= bootstrap_icon('exclamation-triangle-fill', class: 'bi flex-shrink-0 me-2') %>
      <div> <%= notice %></div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t('admin.shared.close') %>"></button>
    </div>
  <% end %>
<% end %>
