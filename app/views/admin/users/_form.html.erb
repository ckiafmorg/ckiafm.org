<%= form_with model: [:admin, user], local: true do |form| %>
  <div class="row mb-3">
    <div class="col-lg">
      <%= form.label :email, t('admin.user.form.email_label'), class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: t('admin.user.form.email_placeholder') %>
    </div>
    <div class="col-lg">
      <%= form.label :password, t('admin.user.form.password_label'), class: "form-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: t('admin.user.form.password_placeholder'), pattern: ".{24,}"%>
    </div>
  </div>
  <div class="row">
    <div class="col-lg">
      <%= form.label :role, t('admin.user.form.role_label'), class: "form-label"%>
      <%= form.select :role,  @roles.map { |role| [t("admin.user.form.role_#{role}"), role] }, {}, class: "form-select" %>
    </div>
  </div>
  <div class="mt-3">
    <%= form.submit t('admin.user.form.btn_user'), class: "btn btn-primary"%>
  </div>
<% end %>
