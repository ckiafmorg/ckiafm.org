<%= form_with model: [:admin, balado, episode], local: true do |form| %>
  <div class="row">
    <div class="col">
      <%= form.label :titre, class: 'form-label' %>
      <%= form.text_field :titre, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form.label :transcript, class: 'form-label' %>
      <%= form.text_area :transcript, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form.label :audio_url, class: 'form-label' %>
      <%= form.url_field :audio_url, class: 'form-control' %>
    </div>
    <div class="col">
      <%= form.label :audio_file, class: 'form-label' %>
      <%= form.file_field :audio_file, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form.label :published_at, class: 'form-label' %>
      <%= form.date_field :published_at, class: 'form-control' %>
    </div>
    <div class="col">
      <%= form.label :status, class: 'form-label' %>
      <%= form.select :status, BaladoEpisode.statuses.keys.map {|status| [t("admin.shared.status.#{status}"), status]}, {}, class: 'form-select' %>
    </div>
  </div>

  <%= render 'admin/shared/form_actions' %>
<% end %>
