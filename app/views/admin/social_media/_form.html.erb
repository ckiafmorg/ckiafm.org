<%= form_with model: [:admin, media], local: true do |form| %>
  <div class="row">
    <div class="col-lg">
      <%= form.label "Quelle plateforme désirez-vous insérer" %>
      <%= form.select :plateform, %w[facebook tiktok instagram] %>
    </div>
    <div class="row">
      <div class="col-lg">
        <%= form.label "url" %>
        <%= form.text_field :url %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col--lg-3">
      <%= form.submit "Sauvegarder", class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
